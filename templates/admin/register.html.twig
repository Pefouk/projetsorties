{% extends 'base.html.twig' %}
{% block title %}Créer un compte | {{ parent() }}{% endblock %}
{% block main %}
    <div class="row">
        <div class="col-sm-12"><h2>Créer un compte</h2></div>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-5">
            <div class="form-group">
                {{ form_start(registerForm) }}<br>
                {{ form_row(registerForm.pseudo) }}<br>
                {{ form_row(registerForm.prenom) }}<br>
                {{ form_row(registerForm.nom) }}<br>
                {{ form_row(registerForm.telephone) }}<br>
        </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group"><br>
            {{ form_row(registerForm.mail) }}<br>
            {{ form_row(registerForm.motPasse) }}<br>
            {{ form_row(registerForm.campus) }}<br>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
    </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary btn-lg">Créer le compte</button>
                <button type="reset" class="btn btn-secondary btn-lg">Effacer</button>
                {{ form_end(registerForm) }}<br>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
{% endblock %}