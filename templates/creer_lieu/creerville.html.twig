{% extends 'base.html.twig' %}

{% block title %} Ajouter une ville | {{ parent() }}{% endblock %}

{% block main %}

    <h1>Ajouter une ville</h1>
    <div class="descri">
    <p>La ville où vous voulez organiser votre sortie n'est pas encore présente dans les choix ?</p>
    <p>Renseignez-la !</p>
    </div>
    <div class="form-group">
    {{ form_start(villeForm) }}
    {{ form_widget(villeForm) }}
        <button type="reset" class="btn btn-secondary" >Annuler</button>
        <button type="submit" class="btn btn-secondary">Ajouter une ville</button>

    {{ form_end(villeForm) }}
    </div>

    <button class="btn-secondary btn-lg">Ma ville est déjà présente</button>

{% endblock %}