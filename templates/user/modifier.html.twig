{% extends 'base.html.twig' %}
{% block title %}Mon profil | {{ parent() }}{% endblock %}
{% block main %}
    <div class="flash">{{ include('inc/flashmessage.html.twig') }}</div>
    <div class="row" id="profil">
        <div class="col-sm-12"><h2>Modifier mon profil</h2></div>
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_start(updateForm) }}<br>
                {{ form_row(updateForm.prenom) }}<br>
                {{ form_row(updateForm.pseudo) }}<br>
                {{ form_row(updateForm.nom) }}<br>
                {{ form_row(updateForm.telephone) }}<br>
                {{ form_row(updateForm.mail) }}<br>
                {{ form_row(updateForm.campus) }}<br>
                {{ form_row(updateForm.imageFile) }}<br>
                <button type="submit" class="btn btn-secondary">Enregistrer</button>
                <a class="btn btn-secondary" href="{{ path('changerMDP') }}">Changer de mot de passe</a>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
{% endblock %}

