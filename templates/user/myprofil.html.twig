{% extends 'base.html.twig' %}
{% block title %}Mon profil | {{ parent() }}{% endblock %}
{% block main %}

<img src="{{ asset('images/participant/') }}{{ profil.avatar }}">


    <h2>Mon profil</h2>
    <div class="form-group">
        {{ form_start(profilForm) }}<br>
        {{ form_row(profilForm.pseudo) }}<br>
        {{ form_row(profilForm.prenom) }}<br>
        {{ form_row(profilForm.nom) }}<br>
        {{ form_row(profilForm.telephone) }}<br>
        {{ form_row(profilForm.mail) }}<br>
        {{ form_row(profilForm.motPasse) }}<br>
        {{ form_row(profilForm.campus) }}<br>
        {{ form_row(profilForm.avatar) }}<br>
        <a class="btn btn-warning" href="{{ path('modifierProfil', {'id': app.user.id}) }}">Modifier mes informations</a>
        {{ form_end(profilForm) }}<br>

    </div>
        {% endblock %}

