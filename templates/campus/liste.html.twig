{% extends 'base.html.twig' %}

{% block title %}Liste des Sites{% endblock %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/table.css') }}">
{% endblock %}

{% block main %}
    <div class="sorties">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="showSorties">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
                <a href="{{ path('campus_creer') }}" class="btn btn-primary btn-block">Nouveau site</a>
                {% if sites is empty %}
                    <h2>Pas de sites trouv√©s !</h2>
                {% else %}
                    <div class="table-responsive-md">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Ville</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for site in sites %}
                                <tr>
                                    <td>{{ site.nom | upper }}</td>
                                    <td><a href="{{ path('campus_modifier', {'id': site.id}) }}">Modifier </a>
                                        -
                                        <a href="{{ path('campus_supprimer', {'id': site.id}) }}">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
{% endblock %}